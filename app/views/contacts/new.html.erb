<div class="posts-wrapper">

        <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
        <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <h1>Contact</h1>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <%= f.input :name, :required => true , input_html: { class: 'input-lg' }%>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <%= f.input :email, :required => true, input_html: { class: 'input-lg' } %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <%= f.input :message, :as => :text, :required => false, :input_html => {:rows => 10} %>
              </div>
            </div>
          </div>
          <div class="hidden">
            <%= f.input :nickname, :hint => 'Leave this field blank!' %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, 'Send message', :class=> "btn btn-primary" %>
          </div>
        <% end %>
    
</div>
