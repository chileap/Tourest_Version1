<h4 style="margin-top:60px;"> 
        <%= link_to 'Add Photo', new_gallery_path %>         
</h4>

<% @galleries.in_groups_of(4) do |group| %>
  <div class="row" style="margin-top:50px;">
    <% group.compact.each do |photo| %>
      <div class="col-md-4 col-sm-12 col-xs-12">
      <center>
        <h4><%= link_to photo.title, photo, class:'text-main' %></h4></center>
        <%= link_to image_tag photo.file_url, :width => '100%',:height => '300px' if photo.file.present?%>
        
        <%= photo.description %>
        <div style="padding:10px;">
        <%=link_to 'More', photo %>
           <!--  <a href="" class="my-btn-cate">More</a> -->
      </div>
      </div>
    <% end %>
  </div>
<% end %>



