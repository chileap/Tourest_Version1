<div class="posts-wrapper">
  <div class="post">
    <div class="post-body">
      <div class="image-wrap">
        <%= simple_form_for @user, url: {action: "points"}, html: { multipart: true } do |f| %>
          <div class="row">
            <div class="col-md-12">
              <div class="form-group text-center">
                <h4>Enter your code to get points:</h4>
                <%= f.input :points, label: false, placeholder: '1234@hsg3', input_html: { rows: 3 } %>
              </div>
            </div>
          </div>
          <div class="form-group text-center">
            <%= f.button :submit, 'Enter your points', class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
